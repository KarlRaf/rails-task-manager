<h1>My tasks</h1>
<% @tasks.each do |task| %>
  <li>
    <%= link_to task.title, task_path(task) %>
    <% if task.completed == true %>
      <i class="fa fa-check-square"></i>
    <% else %>
      <i class="fa fa-square"></i>
    <% end %>
  </li>
<% end %>
<%= link_to "create a task", tasks_new_path %>
